<section>
    <div class="container">
        <div class="row mb-5">
            <a href="/admin/add-product" class="btn btn-success ml-auto" >Add product</a>

        </div>
        <table class="table mt-3" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</Title></th>
      <th scope="col">Catogery</th>
      <th scope="col">price</th>
      <th scope="col">description</th>
      <th>image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}

    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}/-</td>
      <td>{{this.Description}}</td>
       
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
         {{!-- <a href="/admin/delete-product?id={{this._id}}&name=naveen" class="btn btn-danger">Delete</a> --}}
          
      </td>
      
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>